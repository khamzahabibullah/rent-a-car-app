<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-border">
  <div class="container">
    <%= link_to root_path do %>
      <%= image_tag "logo2.png", class: 'height-logo'  %>
      <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <p class="dropdown-toggle cursor", id="navbarDropdown", data-toggle= "dropdown"> <%= current_user.email  %></p>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Dashboard", my_bookings_path, class: "dropdown-item" %>
              <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "btn-green thin" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
